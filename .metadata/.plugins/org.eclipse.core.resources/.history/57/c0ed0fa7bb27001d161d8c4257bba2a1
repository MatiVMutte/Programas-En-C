#include <stdio.h>
#include <stdlib.h>
//#include "..\..\Herramientas - Funciones\src\libreria.h"

int scanValInt(char[], char[], int, int);

int main(void) {
	setbuf(stdout, NULL);
	int numero = scanValInt("Ingrese un numero entero (5 - 10): ", "ERROR - Reingrese un numero entero (5-10): ", 5, 10);

	printf("Numero es: %i", numero);

	return 0;
}

int scanValInt(char mensaje[], char error[], int min, int max) {
	int numeroIngresado;
	printf(mensaje);
	scanf("%i", &numeroIngresado);
	while(numeroIngresado < min || numeroIngresado > max) {
		printf(error);
		scanf("%i", &numeroIngresado);
	}

	return numeroIngresado;
}
