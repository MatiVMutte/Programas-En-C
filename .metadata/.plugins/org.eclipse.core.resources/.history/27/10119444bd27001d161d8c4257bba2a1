#include <stdio.h>
#include <stdlib.h>
//#include "..\..\Herramientas - Funciones\src\libreria.h"

int scanValInt(char[], char[], int, int);
int Sumar1(int, int);
int Sumar2(void);
void Sumar3(int, int);
void Sumar4(void);

int main(void) {
	setbuf(stdout, NULL);

	puts("con RETORNO Y PARAMETROS");
	printf("Suma con retorno y parametros: %i", Sumar1(2, 5));
	puts("con RETORNO Y sin PARAMETROS");


	return 0;
}

int Sumar1(int num1, int num2) {
	return num1 + num2;
}

int Sumar2(void) {
	int num1;
	int num2;
	return 0;
}
void Sumar3(int, int);
void Sumar4(void);

int scanValInt(char mensaje[], char error[], int min, int max) {
	int numeroIngresado;
	printf(mensaje);
	scanf("%i", &numeroIngresado);
	while(numeroIngresado < min || numeroIngresado > max) {
		printf(error);
		scanf("%i", &numeroIngresado);
	}

	return numeroIngresado;
}
