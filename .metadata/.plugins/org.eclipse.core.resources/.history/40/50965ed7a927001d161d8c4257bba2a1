#include <stdio.h>
#include <stdlib.h>

int PedirNumeroInt(void);

int main(void) {
	setbuf(stdout, NULL);
	printf("Numero entero: %i", pedirNumeroInt());

	return 0;
}

int PedirNumeroInt(void) {
	int numeroEntero;

	printf("Ingrese un numero entero: ");
	scanf("%i", &numeroEntero);

	return numeroEntero;
}
